@model Merve.Models.Users
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
<!-- HERO SECTION -->

<section class="hero small-size-hero" id="hero">
</section>

<!-- ABOUT SECTION -->
<section class="about">
    <div class="container">
        <div class="row">
            <div class="description padding-right animate-left">
                <div class="global-headline">
                    <h2 class="sub-headline">
                        Neden
                    </h2>
                    <h3 class="headline headline-dark">Ekşi Maya?</h3>
                    <div class="asterisk"><i class="fas fa-asterisk"></i></div>
                </div>
                <p>Doğa, Kimya ve Sabrın Nefis Birleşimi: Ekşi Maya  </p> @ViewBag.login<br>
                <p>
                    Ekmekler uzun süre fermente edildiğinden sindirimi daha kolay oluyor ve bağışıklık sisteminizi kuvvetlendiriyor.
                </p>
            </div>
            <div class="image animate-right" style="width:460px; height:300px; background:url('../images/about-img-2.jpeg'); center no-repeat">
                
            </div>
        </div>
    </div>
</section>
<hr>
@if (@Context.Request.Cookies["login"] == null)
{
    <!-- Register SECTION -->
    <section id="register" class="reservation">
        <div class="container">
            <div class="reservation__container">
                <h4>Kayıt Ol</h4>
                @using (Html.BeginForm("Register", "Home", FormMethod.Post, new { @class = "reservation__form" }))
                {
                    <form class="reservation__form">
                        @Html.TextBoxFor(m => m.FullName, new { @class = "reservation_time", id = "Form-company-name", type = "text", placeholder = "Ad Soyad " })
                        @Html.TextBoxFor(m => m.Email, new { @class = "reservation_time", id = "Form-company-name", type = "text", placeholder = "Email  " })
                        @Html.TextBoxFor(m => m.Password, new { @class = "reservation_time", id = "Form-company-name", type = "password", placeholder = "Şifre " })


                        <button type="submit" class="btn btn-primary submit__reservation">Kayıt Ol</button>
                    </form>
                }
            </div>
        </div>
    </section>

    <hr>
}

<!-- ABOUT SECTION -->
<section class="about">
    <div class="container">
        <div class="row">
            <div class="image padding-right margin-bottom animate-left">
                <img src="/images/hakkımızda-ekmek.jpg" alt="bread">
            </div>
            <div class="description animate-right">
                <div class="global-headline">
                    <h2 class="sub-headline">
                        Tazecik
                    </h2>
                    <h3 class="headline headline-dark">Ekmekler</h3>
                    <div class="asterisk"><i class="fas fa-asterisk"></i></div>
                </div>
                <p>
                    Yüz yıllardır Anadolu topraklarında yaratılan eşsiz ekmek tariflerini şeflerimizin
                    reçeteleriyle birleştiriyoruz ve yeni ekşi mayalı ekmeklerimizi sağlığına dikkat edenlerin beğenilerine sunuyoruz.
                </p>
            </div>
        </div>
    </div>
</section>
<hr>
@if (@Context.Request.Cookies["login"] == null)
{
    <!-- Login SECTION -->
    <section id="login" class="reservation">
        <div class="container">
            <div class="reservation__container">
                <h4>Giriş Yap</h4>
                @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "reservation__form" }))
                {
                    @Html.TextBoxFor(m => m.Email, new { @class = "reservation_time", id = "Form-company-name", type = "text", placeholder = "Email  " })
                    @Html.TextBoxFor(m => m.Password, new { @class = "reservation_time", type = "password", placeholder = "Şifre " })
                    <button type="submit" class="btn btn-primary submit__reservation">Giriş Yap</button>
                }
            </div>
        </div>
    </section>
}




















